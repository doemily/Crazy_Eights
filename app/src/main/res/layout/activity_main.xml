<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/brown_felt"
        tools:layout_editor_absoluteX="77dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/newGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Game" />

        <Button
            android:id="@+id/easyMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Easy" />

        <Button
            android:id="@+id/hardMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hard" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help"
            app:iconTint="#24B84E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player1"
                android:layout_width="200dp"
                android:layout_height="202dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:scaleX=".4"
                android:scaleY=".4"
                android:translationX="-5dp"
                android:translationY="5dp"
                app:srcCompat="@drawable/player1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Score: 3"
                android:textAlignment="center"
                android:textColor="#FBFAFA"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player2"
                android:layout_width="200dp"
                android:layout_height="202dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:scaleX=".4"
                android:scaleY=".4"
                android:translationX="-5dp"
                android:translationY="5dp"
                app:srcCompat="@drawable/player2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Score: 4"
                android:textAlignment="center"
                android:textColor="#FDFDFD"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player3"
                android:layout_width="200dp"
                android:layout_height="202dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:scaleX=".4"
                android:scaleY=".4"
                android:translationX="-5dp"
                android:translationY="5dp"
                app:srcCompat="@drawable/player3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Score: 1"
                android:textAlignment="center"
                android:textColor="#FBFDFB"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player4"
                android:layout_width="200dp"
                android:layout_height="202dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:scaleX=".4"
                android:scaleY=".4"
                android:translationX="-5dp"
                android:translationY="5dp"
                app:srcCompat="@drawable/player4" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Score: 2"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-400dp"
        android:layout_weight="0"
        android:baselineAligned="false"
        android:clickable="true"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationY="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/back_of_card" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="-220dp"
        android:layout_weight="0"
        android:baselineAligned="false"
        android:clickable="true"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="vertical"
        android:rotation="0"
        android:translationY="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        tools:layout_editor_absoluteY="202dp">

        <FrameLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:rotation="90">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="240dp"
                app:srcCompat="@drawable/back_of_card" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="220dp"
                app:srcCompat="@drawable/back_of_card" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="200dp"
                app:srcCompat="@drawable/back_of_card" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-220dp"
        android:layout_weight="0"
        android:baselineAligned="false"
        android:clickable="true"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="vertical"
        android:rotation="-180"
        android:translationY="20dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/imageView">

        <FrameLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:rotation="90">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="200dp"
                app:srcCompat="@drawable/back_of_card" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="180dp"
                app:srcCompat="@drawable/back_of_card" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="160dp"
                app:srcCompat="@drawable/back_of_card" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="140dp"
                app:srcCompat="@drawable/back_of_card" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-270dp"
        android:baselineAligned="false"
        android:clickable="true"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp">

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="0dp"
                app:srcCompat="@drawable/ace_of_spades2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="40dp"
                app:srcCompat="@drawable/diamonds2" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="80dp"
                app:srcCompat="@drawable/hearts7" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="120dp"
                app:srcCompat="@drawable/king_of_hearts" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:translationX="160dp"
                app:srcCompat="@drawable/spades3" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
